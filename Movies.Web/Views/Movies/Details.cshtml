@model Movies.Web.Models.Omdb.OmdbDetails

@{
    if (Model != null && Model.Response == "True")
    {
        ViewData["Title"] = Model.Title + " (" + Model.Year + ")";
    }
    else
    {
        ViewData["Title"] = "Movie not found";
    }
}

@await Html.PartialAsync("SearchBoxAutoSuggest")

@if (Model != null && Model.Response == "True")
{
    <div>
        <h4>@Model.Title</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Year)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Year)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Released)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Released)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Runtime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Runtime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Director)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Director)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Writer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Writer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actors)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actors)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Plot)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Plot)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Language)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Language)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Awards)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Awards)
            </dd>
            @if (Model.Poster != "N/A")
            {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Poster)
            </dt>
            <dd class="col-sm-10">
                <div class="card-block">
                    <div class="img-card">
                        <img src="@Model.Poster" alt="Movie @Model.Title" class="w-25">
                    </div>
                </div>
            </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Metascore)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Metascore)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.imdbRating)
            </dt>
